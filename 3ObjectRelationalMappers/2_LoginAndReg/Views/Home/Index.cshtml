@model User

@{
    ViewData["Title"] = "Register!";
}

<div class="d-flex flex-column">
    <div class="d-flex flex-row justify-content-between align-items-center pb-3 col-12 px-0">
        <h2 class="col-10 mr-auto">Register to this Cool Site!</h2>
        <a href="/Login" class="col-2 ml-auto"><u>Login</u></a>
    </div>
    <div class="d-flex flex-row justify-content-start">
        <form asp-action="Register" method="post" class="d-flex flex-row flex-wrap justify-content-start col-10 p-0">
            <div class="col-5 d-flex flex-column align-items-start">
                <div class="input-group p-2 d-flex flex-column">
                    <label for="FirstName">First Name</label>
                    <input asp-for="FirstName" placeholder="John">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="input-group p-2 d-flex flex-column">
                    <label for="LastName">Last Name</label>
                    <input asp-for="LastName" placeholder="Doe">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="input-group p-2 d-flex flex-column">
                    <label for="Email">Email</label>
                    <input asp-for="Email" placeholder="john.doe@email.com">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="col-1"></div>
            <div class="col-5 d-flex flex-column align-items-start">
                <div class="input-group p-2 d-flex flex-column">
                    <label for="DoB">Date of Birth</label>
                    <input asp-for="DoB" placeholder="Must be at least 8 chars">
                    <span asp-validation-for="DoB" class="text-danger"></span>
                </div>
                <div class="input-group p-2 d-flex flex-column">
                    <label for="Password">Password</label>
                    <input asp-for="Password" placeholder="Must be at least 8 chars">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="input-group p-2 d-flex flex-column">
                    <label for="Confirm">Confirm Password</label>
                    <input asp-for="Confirm" placeholder="Must match Password">
                    <span asp-validation-for="Confirm" class="text-danger"></span>
                </div>
            </div>
            <div class="col-1"></div>
            <input type="submit" value="Register!" class="btn btn-primary shadow-lg mt-2 ml-4">
        </form>
    </div>
</div>
