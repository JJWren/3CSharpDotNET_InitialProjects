@{
    ViewData["Title"] = "Welcome!";
}

@model User

<div class="d-flex flex-column">
    <div class="d-flex flex-row justify-content-center align-items-center text-center">
        <a href="/Bright_Ideas" class="btn btn-info m-1">Bright Ideas</a>
        <a href="/" class="btn btn-danger m-1">Logout</a>
    </div>
    <div class="d-flex flex-column border-bottom border-info">
        <p>Name: @Model.Name</p>
        <p>Alias: @Model.Alias</p>
        <p>Email: @Model.Email</p>
    </div>
    <div class="d-flex flex-column">
        <p>Total Number of Posts: @ViewBag.Count</p>
        <p>Total Number of Likes: @Model.Likes.Count</p>
    </div>
</div>