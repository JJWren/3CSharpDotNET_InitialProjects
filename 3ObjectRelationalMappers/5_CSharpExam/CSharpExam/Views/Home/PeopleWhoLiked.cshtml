@{
    ViewData["Title"] = "Welcome!";
}

@model Idea

<div class="d-flex flex-column">
    <div class="d-flex flex-row justify-content-between text-center">
        <h1>Hello @ViewBag.User.Alias!</h1>
        <div class="d-flex flex-row justify-content-center align-items-center text-center">
            <a href="/Bright_Ideas" class="btn btn-info m-1">Bright Ideas</a>
            <a href="/" class="btn btn-danger m-1">Logout</a>
        </div>
    </div>
    <div class="d-flex flex-row justify-content-start text-center p-2 m-1">
        <p class="m-1 p-1"><a href="/UserInfo/@Model.Creator.UserID" class="m-1 p-1">@Model.Creator.Alias</a> says:</p>
        <div class="d-flex flex-column justify-content-start text-center p-2 m-1">
            <p class="border border-dark">@Model.Comment</p>
        </div>
    </div>
    <div class="d-flex flex-column m-1 justify-content-center align-items-center">
        <p><b>People who liked this post:</b></p>
        <table class="table table-striped table-hover table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Alias</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var l in Model.Likes)
                {
                    <tr>
                        <td><a href="/UserInfo/@l.User.UserID">@l.User.Alias</a></td>
                        <td>@l.User.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>