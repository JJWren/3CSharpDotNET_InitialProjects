@model Dish;

@{
    ViewData["Title"] = "Edit " + @ViewBag.Name;
}

<div class="text-center">
    <h1 class="pb-3">Edit @ViewBag.Name</h1>
    <form class="d-flex flex-row" asp-action="Edit" asp-route-data="ViewBag.DishID" method="post">
        <div class="col-4">
            <div class="form-group">
                <label for="Chef">Chef's Name</label>
                <input type="text" class="form-control" asp-for="Chef" id="Chef" placeholder="Boyardee">
                <span asp-validation-for="Chef" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Name">Name of Dish</label>
                <input type="text" class="form-control" asp-for="Name" id="Name" placeholder="Canned Soup">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Calories"># of Calories</label>
                <input type="text" class="form-control" name="Calories" id="Calories" placeholder="350">
                <span asp-validation-for="Calories" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label for="Tastiness">Tastiness</label>
                <select class="form-control" asp-for="Tastiness" id="Tastiness">
                    <option>-Select a Value-</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
                <span asp-validation-for="Tastiness" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label for="Description">Description</label>
                <textarea class="form-control" asp-for="Description" id="Description" placeholder="Describe the food here" rows="6"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary shadow-lg mb-2">Edit Dish</button>
        </div>
    </form>
</div>