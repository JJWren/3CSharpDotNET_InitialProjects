@model Chef

@{
    ViewData["Title"] = "Add Chef";
}

<div class="d-flex flex-column justify-content-start">
    <form class="d-flex flex-row" asp-action="NewChef" method="post">
        <div class="col-5 d-flex flex-column">
            <div class="form-group">
                <label for="FirstName">First Name</label>
                <input type="text" class="form-control" asp-for="FirstName" id="FirstName" placeholder="Moose">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="LastName">Last Name</label>
                <input type="text" class="form-control" asp-for="LastName" id="LastName" placeholder="Phillips">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-2"></div>
        <div class="col-5 d-flex flex-column">
            <div class="form-group">
                <label for="DoB">Date of Birth</label>
                <input asp-for="DoB" placeholder="Must be at least 8 chars">
                <span asp-validation-for="DoB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Add Chef</button>
            </div>
        </div>
    </form>
</div>